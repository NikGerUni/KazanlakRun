@model KazanlakRun.Web.Areas.User.Models.VolunteerInputModel

@{
    ViewData["Title"] = "Edit Your Registration";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" asp-antiforgery="true">
    <div class="form-group">
        <label asp-for="Names"></label>
        <input asp-for="Names" class="form-control" />
        <span asp-validation-for="Names" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>

<form asp-action="Delete"
      method="post"
      asp-antiforgery="true"
      onsubmit="return confirm('Are you sure you want to delete your registration?');">
    <button type="submit" class="btn btn-danger mt-2">Delete Registration</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
