@model KazanlakRun.Web.Areas.Admin.Models.VolunteerViewModel

@{
    ViewData["Title"] = "Delete Volunteer";
}

<h1>Delete Volunteer</h1>

<h3>Are you sure you want to delete this volunteer?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Names</dt>
        <dd class="col-sm-10">@Model.Names</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Roles</dt>
        <dd class="col-sm-10">
            @foreach (var role in Model.AllRoles.Where(r => Model.SelectedRoleIds.Contains(int.Parse(r.Value))))
            {
                <span class="badge bg-secondary">@role.Text</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
