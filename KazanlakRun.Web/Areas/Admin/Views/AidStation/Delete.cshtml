@model KazanlakRun.Web.Areas.Admin.Models.AidStationViewModel

@{
    ViewData["Title"] = "Delete Aid Station";
}

<h1>Delete Aid Station</h1>

<h3>Are you sure you want to delete this aid station?</h3>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Distances</dt>
    <dd class="col-sm-10">
        @foreach (var d in Model.AllDistances.Where(x => Model.SelectedDistanceIds.Contains(int.Parse(x.Value))))
        {
            <span class="badge bg-secondary">@d.Text</span>
        }
    </dd>

    <dt class="col-sm-2">Volunteers</dt>
    <dd class="col-sm-10">
        @foreach (var v in Model.AllVolunteers.Where(x => Model.SelectedVolunteerIds.Contains(int.Parse(x.Value))))
        {
            <span class="badge bg-secondary">@v.Text</span>
        }
    </dd>
</dl>

<form asp-action="Delete" method="post">
    
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" >Delete</button>

    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

