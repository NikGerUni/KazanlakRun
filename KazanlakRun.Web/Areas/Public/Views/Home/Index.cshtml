@{
    ViewData["Title"] = "Home Page";
}
<style>
  .hero-countdown {
    font-size: 2.5rem;
    color: #FFD86C;
  }
     .hero-overlay .hero-subtitle,
    .hero-overlay .hero-countdown {
        margin: 0.25rem 0; 
    }
</style>
<div class="hero-section">
    <img src="~/images/Kazanlak.webp" alt="Kazanlak city view" class="hero-image" />
    <div class="hero-overlay">
        <h1 class="hero-title">KAZANLAK RUN - SUPPORT CENTER</h1>
        <p class="hero-subtitle">
            10, 20, 40 km | Start/Finish - Central Park |  31.05.2026 10:00
        </p>

        
        <p id="countdown" class="hero-countdown"></p>

        <p class="hero-subtitle">We are happy to have you as our volunteer supporter</p>
        <p class="hero-subtitle">Please log in first</p>
        <a class="btn btn-primary login-btn"
           asp-area="Identity"
           asp-page="/Account/Login">
            Login
        </a>
    </div>
</div>

<div class="about-section">
    
</div>

@section Scripts {
    <script>
        const target = new Date('May 31, 2026 10:00:00').getTime();
        const timer = setInterval(() => {
            const now = Date.now();
            const diff = target - now;

            if (diff <= 0) {
                clearInterval(timer);
                document.getElementById('countdown').innerText = 'Event Started!';
                return;
            }

            const days    = Math.floor(diff / (1000 * 60 * 60 * 24));
            const hours   = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((diff % (1000 * 60)) / 1000);

            document.getElementById('countdown').innerText =
                `${days}d ${hours}h ${minutes}m ${seconds}s`;
        }, 1000);
    </script>
}
