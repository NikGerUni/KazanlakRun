@model KazanlakRun.Web.Areas.Admin.Models.RoleViewModel

<tr>
    <td>
        
        <input asp-for="Id" type="hidden" />
        @Model.Id
    </td>
    <td>
        
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </td>
    <td>
        
        <input asp-for="IsDeleted" type="hidden" />
        <button type="button" class="btn btn-danger" onclick="markDeleted(this)">
            Delete
        </button>
    </td>
</tr>
